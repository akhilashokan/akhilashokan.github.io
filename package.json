{
  "name": "akhilashokan.github.io",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:sass": "sass  --no-source-map src/assets/css:public/assets/css",
    "copy:html": "copyfiles -u 1 src/*.html public",
    "copy:json": "copyfiles -u 1 src/*.json public",
    "copy": "npm-run-all --parallel copy:*",
    "watch:html": "onchange src/*.html -- npm run copy:html",
    "watch:json": "onchange src/*.json -- npm run copy:json",
    "watch:sass": "sass  --no-source-map --watch src/assets/css:public/assets/css",
    "watch:ts": "tsc -w",
    "watch": "npm-run-all --parallel watch:*",
    "serve": "browser-sync start --server public --files public",
    "start": "npm-run-all copy --parallel watch serve",
    "build": "npm-run-all copy:html build:*",
    "postbuild": "postcss public/assets/css/*.css -u autoprefixer cssnano -r --no-map"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akhilashokan/akhilashokan.github.io.git"
  },
  "author": "Akhil Ashokan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akhilashokan/akhilashokan.github.io/issues"
  },
  "homepage": "https://github.com/akhilashokan/akhilashokan.github.io#readme",
  "devDependencies": {
    "typescript": "^4.7.4",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "copyfiles": "^2.4.1",
    "cssnano": "^5.0.17",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.8"
  }
}